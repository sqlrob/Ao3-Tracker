<?xml version="1.0" encoding="UTF-8" ?>
<resources>
  <color name="LightHighlight">#970000</color>
  <color name="LightHighlightMedium">#99970000</color>
  <color name="LightHighlightMediumLow">#66970000</color>
  <color name="LightHighlightLow">#33970000</color>
  <color name="DarkHighlight">#5998d6</color>
  <color name="DarkHighlightMedium">#995998d6</color>
  <color name="DarkHighlightMediumLow">#665998d6</color>
  <color name="DarkHighlightLow">#335998d6</color>

  <style name="LightTheme" parent="android:Theme.Material.Light">
    <item name="android:colorPressedHighlight">@color/LightHighlightMediumLow</item>
    <item name="android:colorLongPressedHighlight">@color/LightHighlightMediumLow</item>
    <item name="android:colorFocusedHighlight">@color/LightHighlightMedium</item>
    <item name="android:colorActivatedHighlight">@color/LightHighlightMediumLow</item>
    <item name="android:activatedBackgroundIndicator">@color/LightHighlightMedium</item>
  </style>
  <style name="DarkTheme" parent="android:Theme.Material">
    <item name="android:colorPressedHighlight">@color/DarkHighlightMediumLow</item>
    <item name="android:colorLongPressedHighlight">@color/DarkHighlightMediumLow</item>
    <item name="android:colorFocusedHighlight">@color/DarkHighlightMedium</item>
    <item name="android:colorActivatedHighlight">@color/DarkHighlightMediumLow</item>
    <item name="android:activatedBackgroundIndicator">@color/DarkHighlightMedium</item>
  </style>
</resources>