{
    "description": "Track chapters read on Ao3.",
    "author": "Alexis Ryan",
    "icons": {
        "128": "logo.png"
    },
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "content_scripts": [
        {
            "all_frames": false,
            "run_at": "document_end",
            "js": [
                "lib/jquery-3.1.1.min.js",
                //@if BROWSER='Edge'
                "edge.js",
                //@endif
                "browser.js",
                "tracker.js",
                "unitconv.js"
            ],
            "css": [
                "tracker.css"
            ],
            "matches": [
                "*://archiveofourown.org/*"
            ]
        },
        {
            "all_frames": true,
            "run_at": "document_end",
            "js": [
                "cleanlinks.js"      
            ],
            "exclude_matches": [
                "*://archiveofourown.org/*"
            ],
            "matches": [
                "*://*/*"
            ]
          }
    ],
    "options_page": "options.html",
    "manifest_version": 2,
    //@if BROWSER='Edge' 
    "minimum_edge_version": "34.14291.1001.0",
    //@endif
    "name": "Ao3 Tracker",
    "version": "1",
    "permissions": [
        "*://archiveofourown.org/*",
        "*://tumblr.com/*",
        "*://*.tumblr.com/*",
        "unlimitedStorage",
        "storage",
        "contextMenus"
    ]
}